<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="io.particle.cloudsdk.silver_v2.ValueActivity">

    <TextView android:text="0" android:layout_width="wrap_content"
        android:textSize="28sp"
        android:id="@+id/value"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On"
        android:id="@+id/refresh_button"
        android:layout_below="@id/value"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        />

    <Button
        android:text="Off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/refresh_button"
        android:layout_alignLeft="@+id/refresh_button"
        android:layout_alignStart="@+id/refresh_button"
        android:layout_marginTop="24dp"
        android:id="@+id/off_button" />

</RelativeLayout>
