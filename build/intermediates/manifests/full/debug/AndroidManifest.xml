<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.particle.cloudsdk.example_app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="24" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="io.particle.cloudsdk.silver_v2.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service android:name="io.particle.cloudsdk.silver_v2.BackgroundNotifications" >
        </service>

        <activity android:name="io.particle.cloudsdk.silver_v2.SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.particle.cloudsdk.silver_v2.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="io.particle.cloudsdk.silver_v2.ValueActivity"
            android:label="@string/title_activity_value" >
        </activity>
    </application>

</manifest>